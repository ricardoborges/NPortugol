<html>
    <body>
    <% escreva(param("x")) %>
        <% variavel i %>
        
        <% para i = 0 ate 10 %>
            <ul>
                <li>
                    <% escreva("Fatorial de ", i, " = ") %> 
                    <% campo("valor", fatorial(i)) %>  
                </li>
            </ul>
        <% fim %>
        
    </body>
</html>

<%
funcao fatorial(x)

    se x == 0 retorne 1 fim
    
    retorne fatorial(x - 1) * x
fim
%>



