função principal()

    variável dt, nome

    dt = data("15/04/2014")

    nome = nomeDoDia(dt)

    imprima(nome)
fim

função nomeDoDia(data)

    variável n

    n = data.numerodia

    se n == 0 retorne "Domingo" fim
    se n == 1 retorne "Segunda" fim
    se n == 2 retorne "Terça" fim
    se n == 3 retorne "Quarta" fim
    se n == 4 retorne "Quinta" fim
    se n == 5 retorne "Sexta" fim
    se n == 6 retorne "Sabádo" fim

fim